<div class="modal" tabindex="-1" role="dialog" id="delete-account-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Account</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Warning. This will permanently delete your account and any data associated with it. </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger delete-account">Delete Account</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12 header">
    <div class="notification-area"> </div>
    <div class="profile-navbar">
      <ul class="no-bullets">
        <li> <a href="" class="toggle-update-info"> Update Info </a></li>
        <li> <a href="" class="toggle-change-pw"> Change Password </a></li>
        <li> <a href="" class="toggle-destroy-account" data-toggle="modal" data-target="#delete-account-modal"> Destroy Account </a></li>
      </ul>
    </div>
  </div>
</div>
<div class="update-info container row">
  <div class="col-md-12">
    <form class="change-password-form" name="change-password-form">
      <h2> Change Password </h2>
      <div class="row">
        <div class="col-md-6">
          <label> Old Password </label>
          <input type="password" class="form-control" name="passwords[old]">
        </div>
        <div class="col-md-6">
          <label> New Password </label>
          <input type="password" class="form-control" name="passwords[new]">
          <span class="message"> </span>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <input type="submit" class="btn btn-primary change-password-btn" value="Change Password">
        </div>
      </div>
    </form>
    <form class="user-update-form" name="user-update-form">
      <h2> Update Profile </h2>
      <div class="row">
        <div class="col-md-6">
          <div class="form-field">
            <label for="#first-name">First Name</label>
            <input type="text" class="form-control" id="first-name" name="user[user_profile_attributes[first_name]]" value="{{user.user_profile.first_name}}">
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-field">
            <label for="#last-name">Last Name</label>
            <input type="text" class="form-control" id="last-name" name="user[user_profile_attributes[last_name]]" value="{{user.user_profile.last_name}}">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-field">
            <label for="#email">Email Address</label>
            <input type="text" class="form-control" id="email" name="user[email]" value="{{user.email}}">
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-field">
            <span class="bold">Gender </span>
            <div class="radio">
              <label class="radio-inline">
                <input type="radio" value="male" name="user[user_profile_attributes[sex]]"> Male
              </label>
              <label class="radio-inline">
                <input type="radio" value="female" name="user[user_profile_attributes[sex]]"> Female
              </label>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-field">
            <label for="#skin-type">Skin Type</label>
            <input type="text" class="form-control" id="skin-type" name="user[user_profile_attributes[fitzpatrick_skin_type]]" value="{{user.user_profile.fitzpatrick_skin_type}}">
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-field">
            <label for="#blood-type">Blood Type</label>
            <select class="form-control">
              <option value="O+">O+</option>
              <option value="O-">O-</option>
              <option value="A+">A+</option>
              <option value="A-">A-</option>
              <option value="B+">B+</option>
              <option value="B-">B-</option>
              <option value="AB+">AB+</option>
              <option value="AB-">AB- </option>
            </select>
            <!-- <input type="text" class="form-control" id="blood-type" name="user[user_profile_attributes[blood_type]]"> -->
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <input type="submit" class="btn btn-primary pull-right" value="Update Profile">
        </div>
      </div>
    </form>
  </div>
</div>
