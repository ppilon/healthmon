<div class="row">
  <div class="col-md-12">
      <form class="create-snapshot">
        <h2> Create Snapshot </h2>
        <div class="row">
          <div class="col-md-4">
            <label> Unit </label>
            <input type="input" class="form-control" name="health_snapshot[unit]">
          </div>
          <div class="col-md-4">
            <label> Value </label>
            <input type="input" class="form-control" name="health_snapshot[value]">
          </div>
          <div class="col-md-4">
            <label> Snapshot Type </label>
            <input type="input" class="form-control" name="health_snapshot[snapshot_type]">
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <label> Source Name </label>
            <input type="input" class="form-control" name="health_snapshot[source_name]">
          </div>
          <div class="col-md-4">
            <label> Start Date </label>
            <input type="input" class="form-control" name="health_snapshot[start_date]">
          </div>
          <div class="col-md-4">
            <label> End Date </label>
            <input data-format="dd/MM/yyyy hh:mm:ss" type="text" class="form-control" name="health_snapshot[end_date]"></input>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <input type="submit" class="btn btn-primary create-snapshot-btn">
          </div>
        </div>
      </form>
    </div>
</div>
